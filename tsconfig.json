{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "paths": {
      "@/*": ["./app/*", "./components/*", "./*"]
    }
  },
  "include": ["**/*", ".next/types/**/*.ts"],
  "exclude": [".*/**", "!.next/types/**/*", "out/**"]
}
